<?xml version="1.0" encoding="UTF-8"?>
<!--
    Document   : stock_lineasconteos.xml
    Author     : Juan Jose Prieto Dzul
    Description:
        Structure for the conteosinventarios table.
-->
<table>
    <column>
        <name>cantidad</name>
        <type>double precision</type>
    </column>
    <column>
        <name>fechaconteo</name>
        <type>date</type>
    </column>
    <column>
        <name>horaconteo</name>
        <type>time</type>
        <null>NO</null>
    </column>
    <column>
        <name>idconteo</name>
        <type>integer</type>
        <null>NO</null>
    </column>
    <column>
        <name>idlinea</name>
        <type>serial</type>
        <null>NO</null>
    </column>
    <column>
        <name>idproducto</name>
        <type>integer</type>
        <null>NO</null>
    </column>
    <column>
        <name>observaciones</name>
        <type>text</type>
    </column>
    <column>
        <name>pendiente</name>
        <type>boolean</type>
    </column>
    <column>
        <name>referencia</name>
        <type>character varying(30)</type>
        <null>NO</null>
    </column>
    <constraint>
        <name>stocks_lineasconteo_pkey</name>
        <type>PRIMARY KEY (idlinea)</type>
    </constraint>
    <constraint>
        <name>ca_stocks_lineasconteos_productos</name>
        <type>FOREIGN KEY (idproducto) REFERENCES productos (idproducto) ON DELETE RESTRICT ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>ca_stocks_lineasconteos_stocks_conteos</name>
        <type>FOREIGN KEY (idconteo) REFERENCES stocks_conteos (idconteo) ON DELETE RESTRICT ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>ca_stocks_lineasconteos_variantes</name>
        <type>FOREIGN KEY (referencia) REFERENCES variantes (referencia) ON DELETE RESTRICT ON UPDATE CASCADE</type>
    </constraint>
</table>